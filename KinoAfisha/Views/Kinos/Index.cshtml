@using KinoAfisha.Models
@using WebAppAspNetMvcCodeFirst.Extensions
@model List<Kino>


<h3>Афиша</h3>

@Html.ActionLink("Добавить запись", "Create", "Kinos")

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Билетов в наличии</th>
            <th>Место показа</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kino in Model)
        {
            <tr>
                <td>@kino.Film.NameFilm</td>
                <td>@kino.Price</td>
                <td>@kino.NumberOfBilets</td>
                <td>@kino.Cinema.GetDisplayValue()</td>
                <td>@kino.NextArrivalDate</td>
                <td>
                    @Html.ActionLink("Удалить", "Delete", "Kinos", new { id = kino.Id }, new { })
                    @Html.ActionLink("Изменить", "Edit", "Kinos", new { id = kino.Id }, new { })
                </td>
            </tr>
        }
    </tbody>
</table>
